choice
	prompt "RT OS select"
	default NONE_RT_OS

config FREE_RTOS
	bool "freeRtos"

config ATOM_THREADS
	bool "atomthreads"

config OSA
	bool "osa (co-operative os)"

config NONE_RT_OS
	bool "none"

endchoice

if FREE_RTOS
source "$KCONFIG_PUBLIC_START_DIR/sw_packages/core/os_wrapper/FreeRTOS/Kconfig"
endif

if FREE_RTOS || ATOM_THREADS || OSA
config RT_OS_IS_SPEED_CRITICAL
	bool   "RT OS is speed critical"
	default n
endif
