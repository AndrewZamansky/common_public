	bool   "arduino sd over spi"
	depends on INCLUDE_INTERNAL_SPI
	default n

if INCLUDE_ARDUINO_SD_SPI
source "$KCONFIG_PUBLIC_START_DIR/sw_packages/storage/ArduinoSdSpi/Kconfig"
endif
	
