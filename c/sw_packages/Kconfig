	def_bool  y
	depends on  INCLUDE_EQUALIZER || INCLUDE_COMPRESSOR || INCLUDE_MIXER || \
				 INCLUDE_I2S_SPLITTER || INCLUDE_I2S_MIXER || INCLUDE_VOICE_3D 

