	bool   "sw gpio wrapper"
	depends on INCLUDE_INTERNAL_GPIO
	default n

config INCLUDE_SPI_FLASH_PARTITION_MANAGER
	bool   "spi flash partition manager"
	depends on INCLUDE_SPI_FLASH
	default n

