#

config INCLUDE_DEV_MENAGMENT
	def_bool  y

if INCLUDE_DEV_MENAGMENT
source "$COMMON_DIR_PATH/c/sw_packages/dev_managment/Kconfig"
endif

config INCLUDE_VERSION_MENAGMENT
	bool   "version management"
	default y

menuconfig INCLUDE_HEARTBEAT
	bool   "heartbeat routines"
	default y

if INCLUDE_HEARTBEAT
config HEARTBEAT_IS_SPEED_CRITICAL
	bool   "hearbeat routines are speed critical"
	default n
endif

menuconfig INCLUDE_PRINTF
	bool   "printf"
	default n

if INCLUDE_PRINTF
source "$COMMON_DIR_PATH/c/sw_packages/PRINTF/Kconfig"
endif


menu "RT OS"
source "$COMMON_DIR_PATH/c/sw_packages/os_wrapper/Kconfig"


endmenu	


menuconfig INCLUDE_SW_UART_WRAPPER
	bool   "software uart wrapper"
	depends on INCLUDE_INTERNAL_UART || INCLUDE_USB_VIRTUAL_COM || INCLUDE_WIRELESS_UART
	default n

if INCLUDE_SW_UART_WRAPPER
source "$COMMON_DIR_PATH/c/sw_packages/sw_uart_wrapper/Kconfig"
endif

menuconfig INCLUDE_TIMER_WRAPPER
	bool   "timer wrapper"
	depends on INCLUDE_CORTEXM_SYSTICK 
	default n

if INCLUDE_TIMER_WRAPPER
source "$COMMON_DIR_PATH/c/sw_packages/timer/Kconfig"
endif

config INCLUDE_HTTP
	bool   "http"
	default n

config INCLUDE_JSMN
	bool   "jsmn"
	default n

