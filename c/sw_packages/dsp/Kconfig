#
	
###################  DSP menu ####################
menu "DSP"

choice
	prompt "real number format"
	default DSP_REAL_NUMBER_FORMAT_FLOATING_POINT

config DSP_REAL_NUMBER_FORMAT_FLOATING_POINT
	bool "floating point"

config DSP_REAL_NUMBER_FORMAT_FIXED_POINT
	bool "fixed point"

endchoice

config FIXMATH_NO_CACHE
	bool   "disable cache in libfixmath"
	depends on DSP_REAL_NUMBER_FORMAT_FIXED_POINT
	default n

config INCLUDE_COMMON_DSP
	bool   "common dsp"
	default n

config COMMON_DSP_IS_SPEED_CRITICAL
	bool   "common dsp is speed critical"
	depends on INCLUDE_COMMON_DSP
	default y

menuconfig INCLUDE_BIQUAD_FILTER
	bool   "biquad_filter"
	default n

config BIQUAD_FILTER_IS_SPEED_CRITICAL
	bool   "biquad_filter is speed critical"
	depends on INCLUDE_BIQUAD_FILTER
	default y


menuconfig INCLUDE_FIR_FILTER
	bool   "fir_filter"
	default n

config FIR_FILTER_IS_SPEED_CRITICAL
	bool   "fir_filter is speed critical"
	depends on INCLUDE_FIR_FILTER
	default y

menuconfig INCLUDE_UPSAMPLING_BY_INT
	bool   "upsampling by integer"
	default n

config UPSAMPLING_BY_INT_IS_SPEED_CRITICAL
	bool   "upsampling by integer is speed critical"
	depends on INCLUDE_UPSAMPLING_BY_INT
	default y

menuconfig INCLUDE_DOWNSAMPLING_BY_INT
	bool   "downsampling by integer"
	default n

config DOWNSAMPLING_BY_INT_IS_SPEED_CRITICAL
	bool   "downsampling by integer is speed critical"
	depends on INCLUDE_DOWNSAMPLING_BY_INT
	default y


menuconfig INCLUDE_MIXER
	bool   "mixer"
	default n

if INCLUDE_MIXER
source "$KCONFIG_PUBLIC_START_DIR/sw_packages/dsp/mixer/Kconfig"
endif

menuconfig INCLUDE_MULTIPLIER
	bool   "multiplier"
	default n

if INCLUDE_MULTIPLIER
source "$KCONFIG_PUBLIC_START_DIR/sw_packages/dsp/multiplier/Kconfig"
endif

menuconfig INCLUDE_I2S_SPLITTER
	bool   "i2s splitter"
	default n


config I2S_SPLITTER_IS_SPEED_CRITICAL
	bool   "i2s splitter is speed critical"
	depends on INCLUDE_I2S_SPLITTER
	default y


menuconfig INCLUDE_I2S_MIXER
	bool   "i2s mixer"
	default n

config I2S_MIXER_IS_SPEED_CRITICAL
	bool   "i2s mixer is speed critical"
	depends on INCLUDE_I2S_MIXER
	default y


menuconfig INCLUDE_DPWM_MIXER
	bool   "dpwm mixer"
	default n

config DPWM_MIXER_IS_SPEED_CRITICAL
	bool   "dpwm mixer is speed critical"
	depends on INCLUDE_DPWM_MIXER
	default y


 
menuconfig INCLUDE_VOICE_3D
	bool   "voice 3D effect"
	default n

config VOICE_3D_IS_SPEED_CRITICAL
	bool   "voice 3D effect is speed critical"
	depends on INCLUDE_VOICE_3D
	default y


menuconfig INCLUDE_BAND_SPLITTER_BUTTERWORTH_6DB_GAIN
	bool   "band splitter butterworth 6db gain"
	default n

config INCLUDE_BAND_SPLITTER_BUTTERWORTH_6DB_GAIN_SPEED_CRITICAL
	bool   "band splitter butterworth 6db gain is speed critical"
	depends on INCLUDE_BAND_SPLITTER_BUTTERWORTH_6DB_GAIN
	default y






menu "staging"


menuconfig INCLUDE_FFMPEG
	bool   "ffmpeg"
	default n
	
config INCLUDE_FFMPEG_IS_SPEED_CRITICAL
	bool   "ffmpeg is speed critical"
	depends on INCLUDE_FFMPEG
	default y

menuconfig INCLUDE_FFT
	bool   "fft"
	default n

config FFT_IS_SPEED_CRITICAL
	bool   "fft is speed critical"
	depends on INCLUDE_FFT
	default y


config INCLUDE_WEBRTC_AEC
	bool   "webrtc echo canceller"
	default n

config INCLUDE_WEBRTC_VAD
	bool   "webrtc voice activity detection"
	default n

config WEBRTC_IS_SPEED_CRITICAL
	bool   "webrtc is speed critical"
	depends on INCLUDE_WEBRTC_AEC || INCLUDE_WEBRTC_VAD
	default y
endmenu


endmenu
#################### end of DSP menu###############################
	
######## automatically selected configurations #########
config AUTO_INCLUDE_COMMON_DSP
	def_bool  y
	depends on  INCLUDE_COMPRESSOR

config AUTO_COMMON_DSP_IS_SPEED_CRITICAL
	def_bool  y
	depends on COMPRESSOR_IS_SPEED_CRITICAL

config INCLUDE_DSP_MANAGEMENT
	def_bool  y
	depends on  (INCLUDE_BIQUAD_FILTER || INCLUDE_COMPRESSOR || INCLUDE_MIXER   || INCLUDE_I2S_SPLITTER || INCLUDE_I2S_MIXER || INCLUDE_VOICE_3D || INCLUDE_WEBRTC_VAD)
	select INCLUDE_MEMORY_POOL

config DSP_MANAGEMENT_IS_SPEED_CRITICAL
	def_bool  y
	depends on  BIQUAD_FILTER_IS_SPEED_CRITICAL || COMPRESSOR_IS_SPEED_CRITICAL || MIXER_IS_SPEED_CRITICAL ||  I2S_SPLITTER_IS_SPEED_CRITICAL || I2S_MIXER_IS_SPEED_CRITICAL || VOICE_3D_IS_SPEED_CRITICAL 


######## end of automatically selected configurations #########	