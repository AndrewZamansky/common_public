menu "clang options"

choice
	prompt "output type"
	default CLANG_OUTPUT_TYPE_APPLICATION

config CLANG_OUTPUT_TYPE_APPLICATION
	bool "application"

config CLANG_OUTPUT_TYPE_DYNAMIC_LIBRARY
	bool "dynamic library"
endchoice


choice
	prompt "Optimization Level"
	default GCC_OPTIMIZE_NONE

config GCC_OPTIMIZE_NONE
	bool "-O0 : No Optimizations"

config GCC_OPTIMIZE_SIZE
    bool "-Os : Optimize for size "

config GCC_OPTIMIZE_SPEED
	bool "-O2 : Optimize for speed "

config GCC_OPTIMIZE_ULTRA_SPEED
	bool "-O3 : Optimize for ultra-speed but can increase code-size "

endchoice


endmenu
