#

config PROJECT_NAME
	string "Project Name"
	default ""

menuconfig PROJECT_IS_PART_OF_BUNDLE
	bool "this project is part of bundle"
	default n

config PROJECT_NAME_SUFFIX
	string "Project Name Suffix"
	depends on PROJECT_IS_PART_OF_BUNDLE
	default ""


choice
	prompt "Architecture"
	default HOST

config ARM
	bool "arm"

config PIC32
	bool "pic32"

config STM8
	bool "stm8"

config AVR
	bool "avr"

config HEXAGON
	bool "hexagon"

config HOST
	bool "host"

endchoice


source "$COMMON_DIR_PATH/c/build_tools/makefiles/Kconfig"
	   	
if !HOST
source "$COMMON_DIR_PATH/c/hw_drivers/arch/Kconfig"
endif

menu "Hardware Drivers"
source "$COMMON_DIR_PATH/c/hw_drivers/Kconfig"
endmenu


menu "Software Packages"
source "$COMMON_DIR_PATH/c/sw_packages/Kconfig"
endmenu

menuconfig USE_COMMON_PRIVATE_PACKAGES
	bool   "use common private packages"
	default n

if 	USE_COMMON_PRIVATE_PACKAGES
source "$COMMON_DIR_PATH/../common_private/Kconfig"
config COMMON_PRIVATE_GIT_COMMIT_HASH
	string "common private git commit hash"
	default ""
endif


config CPU_CALCULATE_CRC32
	bool   "calculate crc32 of output binary"
	default n

config COMMON_PUBLIC_GIT_COMMIT_HASH
	string "common public git commit hash"
	default ""
