	def_bool  y
	depends on INCLUDE_CORTEXM_SYSTICK || INCLUDE_INTERNAL_TIMER || XTENSA

config INCLUDE_GPIO
	def_bool  y
	depends on INCLUDE_INTERNAL_GPIO 

