menu "`--->  generic basic configurations"

choice
	prompt "Cpu Type"
	default CPU_UNDEFINED

config GENERIC_CORTEX_M3
	bool "cortex-M3"
	select CORTEX_M3

config GENERIC_CORTEX_M4
	bool "cortex-M4"
	select CORTEX_M4

config GENERIC_CORTEX_A9
    bool "cortex-A9"
	select CORTEX_A9

config GENERIC_ARM_926EJ_S
	bool "arm926ej-s"
	select ARM_926EJ_S

config CPU_UNKNOWN
	bool "unknown cpu"

endchoice


config GENERIC_ARM_BOARD
	def_bool y
	select INTERNAL_SRAM 
	select INTERNAL_FLASH 
	


config MAX_NUMBER_OF_CLOCKS
    hex
    default 1 
    


#######################################
##########  clock tree  ###############

menu "clocks tree"


comment "CONFIG_DT_CORE_CLOCK : core clock"
config DT_CORE_CLOCK
    hex
    default 2

endmenu


##########  end of  clock tree  ###############
###############################################

##################################################
##########  interrupts definitions ###############

menu "interrupts"

if GENERIC_CORTEX_M3 || GENERIC_CORTEX_M4

comment "CONFIG_DT_SV_CALL_INTERRUPT : sv call interrupt"
config DT_SV_CALL_INTERRUPT
    int
    default -5 

comment "CONFIG_DT_PEND_SV_INTERRUPT : pending sv interrupt"
config DT_PEND_SV_INTERRUPT
    int
    default -2 

comment "CONFIG_DT_CORTEX_M_SYSTICK_INTERRUPT : systick interrupt"
config DT_CORTEX_M_SYSTICK_INTERRUPT
    int
    default -1 

endif

endmenu


##########  end of interrupts definitions ###############
#########################################################
    


##################################################
##############  memories on soc ##################

menu "memories"

config DT_SOC_RAM_START_ADDR
    hex "sram start"
    default 0x20000000

config DT_SOC_RAM_SIZE
    hex "sram size"
    default 0x20000    

config DT_SOC_FLASH_START_ADDR
    hex "flash start"
    default 0x0

config DT_SOC_FLASH_SIZE
    hex "flash size"
    default 0x40000   

endmenu

#############  end of memories on soc ###################
#########################################################


if GENERIC_CORTEX_M3 || GENERIC_CORTEX_M4

menuconfig DT_SYSTICK
	bool   "enable systick"
	default n
	
comment "CONFIG_DT_CORTEX_M_SYSTICK_INPUT_CLOCK : systick clock"
	depends on DT_SYSTICK
config DT_CORTEX_M_SYSTICK_INPUT_CLOCK
	int   
	default DT_CORE_CLOCK
	depends on DT_SYSTICK

comment "CONFIG_DT_CORTEX_M_SYSTICK_INTERRUPT : systick interrupt"
	depends on DT_SYSTICK

endif

endmenu

