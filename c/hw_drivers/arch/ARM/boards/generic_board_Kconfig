menu "generic basic configurations"

choice
	prompt "Cpu Type"
	default CPU_UNDEFINED

config CORTEX_M3
	bool "cortex-M3"

config CORTEX_M41
	bool "cortex-M4"

config CORTEX_A9
    bool "cortex-A9"

config ARM_926EJ_S
	bool "arm926ej-s"

config CPU_UNKNOWN
	bool "unknown cpu"

endchoice

config RAM_START_ADDR
    hex "ram start address (hex)"
    default 0x20000000

config RAM_SIZE
    hex "ram size (hex)"
    default 0x20000    

config FLASH_START_ADDR
    hex "flash start address (hex)"
    default 0x0

config FLASH_SIZE
    hex "flash size (hex)"
    default 0x40000   
endmenu
